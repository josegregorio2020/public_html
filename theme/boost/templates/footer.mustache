<style>
/* Estilos encapsulados dentro de .footer-content-debugging */
.footer-content-debugging {
    padding: 20px;
    background: #f8f9fa; /* Fondo claro */
    color: #3962AE; /* Texto oscuro */
    text-align: center;
    font-size: 14px;
}

.footer-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}
.footer-container p {
    color: #3962AE; /* Texto oscuro */
}

.footer-social {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 10px;
}

.footer-social a {
    color: #3962AE;
    width: 24px;
    height: 24px;
    transition: color 0.3s;
}

.footer-social a:hover {
    color: #007bff; /* Cambio de color en hover */
}

/* ðŸ“± Responsivo */
@media (max-width: 768px) {
    .footer-content-debugging {
        font-size: 12px;
        padding: 15px;
    }

    .footer-social {
        justify-content: center;
    }
}
</style>


</footer>
{{#js}}
require(['theme_boost/footer-popover'], function(FooterPopover) {
    FooterPopover.init();
});
{{/js}}
